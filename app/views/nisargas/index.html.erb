<h1>Listing Nisargas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nisargas.each do |nisarga| %>
      <tr>
        <td><%= nisarga.name %></td>
        <td><%= link_to 'Show', nisarga %></td>
        <td><%= link_to 'Edit', edit_nisarga_path(nisarga) %></td>
        <td><%= link_to 'Destroy', nisarga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

